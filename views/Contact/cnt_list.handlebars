<style>
    .viewdetails {
        width: 100%;
        min-height: 80vh;
        background-color: rgb(196, 238, 196);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2px;
        overflow: hidden; /* Ensures animations don't overflow */
    }
  .buton{
    width: 40%;
    height: 100%;
  }
 
    .viewdetails section {
        width: 99%;       
        min-height: 79vh;
        background-color: black;
        display: flex;
        flex-wrap: wrap;
        gap: 20px; 
        flex-direction: column;
        justify-content: center;
        align-items: center;
       
        {{!-- justify-content: space-around; --}}
        padding: 10px;
        animation: fadeIn 1s ease-in-out; /* Section entry animation */
        
    }

    .viewdetails a:hover {
        text-decoration: none;
    }
  h4{
    color: white;
  }
    .viewdetails .details {
         width:  300px;
         height: 40px;
         background-color: rgba(187, 184, 184, 0.7);
        display: flex;
        border-radius: 3px;
        justify-content: space-between;
        align-items: center;
        margin-right: 20px;
         padding-left: 10px;
      

    }
    .details .buton{
    
        width: 40%;
        height: 100%;
    }
    {{!-- .details .name{
         background-color: rgb(34, 0, 255);
        width: 50%;
        height: 100%;

    } --}}

    .viewdetails .details:hover {
        transform: scale(1.05) translateX(-5px); /* Scale and slight left movement */
        background-color: rgb(180, 242, 169); /* Changes background color on hover */
        transition: transform 0.5s ease-in-out, background-color 0.3s ease-in-out;
    }

    .viewdetails h1 {
        color: rgb(11, 192, 186);
        font-size: 30px;
        text-align: center;
        margin-top: 30px;
        opacity: 0;
        animation: fadeInDown 1s ease-in-out forwards; /* Header fade-in from top */
    }

    .viewdetails button {
        
        margin-top: 10px;
        padding: 5px 10px;
        background-color: rgb(92, 192, 11);
        border: none;
        color: black;
        border-radius: 5px;
        
        cursor: pointer;
        transform: translateY(0);
        transition: transform 0.3s ease-in-out, background-color 0.3s ease-in-out;
    }
    .viewdetails  .delete{
        background-color: rgb(192, 11, 11);
    }

    .viewdetails button:hover {
        background-color: black;
        color: white;
        transform: translateY(-3px); /* Slight upward motion */
    }

    .viewdetails a {
        color: black;
        text-decoration: none;
    }

    .viewdetails a:hover {
        text-decoration: underline;
    }
    .search-bar{
    width: 400px;
    text-align: center;
    margin-left: auto;
    margin-right: auto;
    {{!-- margin-bottom: 20px; --}}
}
.search-bar input {
    width: 50%;
    padding: 10px;
    font-size: 16px;
    border: 2px solid black;
    border-radius: 5px;
}
#no-data {
    margin-top: 10px;
    text-align: center;
    font-size: 18px;
    color: red;
}



 
 
</style>


    

   

<body>

    <div class="viewdetails">
        <!-- Search Bar -->
        

        <!-- Data Section -->
        <section id="data-container">
            <div class="search-bar">
            <form action="/api/search" method="get">
                <input 
                    type="text" 
                    name="q" 
                    placeholder="Search by name..." 
                    value="{{query}}" 
                />
                <button type="submit">Search</button>
            </form>
            <p id="no-data" style="display: none;">No user found</p>
        </div>
            {{#each data}}
            <span class="user-card" data-name="{{this.firstname}}">
                <a href="/api/{{this._id}}">
                    <div class="details">
                        <div class="name">
                            <h4>{{this.firstname}}</h4>
                        </div>
                        <div class="buton">
                            <button class="delete">
                                <a href="/api/delete/{{this._id}}">Delete</a>
                            </button>
                            <button class="edit">
                                <a href="/api/edit/{{this._id}}">Edit</a>
                            </button>
                        </div>
                    </div>
                </a>
            </span>
            {{else}}
            <p>No data. Create data <a href="/api/addcontacts">here</a>.</p>
            {{/each}}
        </section>
    </div>

    <script>
        // Client-side search functionality
        const searchInput = document.querySelector('input[name="q"]');
        const noDataMessage = document.getElementById("no-data");

        searchInput.addEventListener('input', function() {
            const searchValue = searchInput.value.toLowerCase();
            const userCards = document.querySelectorAll(".user-card");
            let hasResults = false;

            userCards.forEach(card => {
                const userName = card.getAttribute("data-name").toLowerCase();
                if (userName.includes(searchValue)) {
                    card.style.display = "block";
                    hasResults = true;
                } else {
                    card.style.display = "none";
                }
            });

            noDataMessage.style.display = hasResults ? "none" : "block";
        });
    </script>
</body>

