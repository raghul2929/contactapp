<style>
     .singlecontent{
          width: 100%;
          height: 80vh;
          background-color: rgb(158, 226, 158);
          display: flex;
          justify-content: center;
          align-items: center;
     }
     .singlecontent main{
            width: 99%;
            height: 99%;
            background-color: black;
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
            align-items: center;
            padding: 20px;
     } 
     .singlecontent h1{
          color: rgb(158, 226, 158);
          text-align: center;
          margin: 10px;
          margin-bottom: 30px;
     }.singlecontent .single{
        width: 300px;
        height: 300px;
        background-color: rgba(97, 94, 94, 0.451);
        border-radius: 20px;
        padding: 20px;
        box-shadow: 0px 0px 10px white;
        line-height: 40px;
     }
     .single h2{
          color: white;
          margin-left: 70px;
          {{!-- text-align: center; --}}
          
     }
     .single  label{
          color:rgb(162, 255, 162);
          font-size: 20px;
          margin-left: 30px;
     }
     .single p{
          color:goldenrod;
          font-size: larger;
          font-weight: 900;
          margin-left: 90px;
     }
     .single img{
          width: 100px;
          height: 100px;
          border-radius: 50%;
          position: absolute;
          top:210px;
          left: 800px;
          
     }

</style>
{{#if data}}
<div class="singlecontent">
 <main>
   <h1>Contact info</h1>

    
<div class="single">
     <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRd42vzmgP8z34NZxxRLREunibYR6dj01bHCA&s" alt="">
     <h2>{{data.firstname}}</h2> 
     <label for="">lastname:</label>
     <p>{{data.lastname}}</p>
     <label for="">phoneno:</label>
     <p>{{data.phoneno}}</p>
     <label for="">saved location:</label>
     <p>{{data.location}}</p>

</div>
</main>
</div>
{{else}}
<h1>no such contact</h1>

{{/if}}